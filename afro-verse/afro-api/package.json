{
  "name": "afro-api",
  "version": "1.0.0",
  "description": "AfroMoji Backend API",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "vercel-build": "npm run build",
    "setup:db": "ts-node src/scripts/setupDatabase.ts",
    "setup:indexes": "ts-node src/scripts/setupIndexes.ts",
    "check:health": "ts-node src/scripts/checkHealth.ts",
    "check:env": "node scripts/check-env.js",
    "setup:dev": "echo 'Copy .env.development to .env manually' && npm run check:env",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:api": "node test-api.js",
    "test:gemini": "ts-node scripts/test-gemini.ts",
    "test:twilio": "ts-node scripts/test-twilio.ts",
    "test:twilio:quick": "ts-node scripts/test-twilio-simple.ts",
    "test:buckets": "ts-node scripts/test-buckets.ts",
    "test:phone": "ts-node scripts/test-phone-conversion.ts",
    "test:all": "npm run test:twilio:quick && npm run test:gemini && npm run test:buckets && npm run test:phone",
    "setup:gemini": "bash scripts/setup-gemini.sh",
    "setup:twilio": "bash scripts/setup-twilio.sh",
    "setup:buckets": "ts-node scripts/setup-buckets.ts",
    "twilio:create-service": "ts-node scripts/create-twilio-verify-service.ts",
    "check:config": "ts-node scripts/check-config.ts",
    "reset-db": "ts-node scripts/reset-database.ts",
    "clear-buckets": "ts-node scripts/clear-gcs-buckets.ts",
    "reset-all": "npm run reset-db -- --confirm && npm run clear-buckets -- --confirm",
    "seed-sa": "ts-node scripts/seed-sa-database.ts",
    "seed-sa:images": "ts-node scripts/seed-sa-with-images.ts"
  },
  "dependencies": {
    "@vercel/node": "^3.0.7",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/tasks": "^4.0.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.10.51",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.0",
    "replicate": "^0.25.1",
    "sharp": "^0.33.1",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.27",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "vercel": {
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "dist"
  }
}

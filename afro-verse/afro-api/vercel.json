{
  "version": 2,
  "name": "afromoji-api",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/health",
      "dest": "api/index.ts"
    },
    {
      "src": "/admin/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/worker/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/v1/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/generation-retry",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/cleanup-generations",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-uploads",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/security-cleanup",
      "schedule": "0 4 * * *"
    }
  ],
  "regions": ["iad1"],
  "functions": {
    "api/index.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
